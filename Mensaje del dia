<script>
  const inicio = new Date('2025-07-20T13:30:00');
  const mensajes = [
    "Eres mi lugar favorito üíï", "Cada d√≠a te amo m√°s üíó", "Tu sonrisa ilumina mis d√≠as üåû",
    "Gracias por existir ‚ú®", "Mi coraz√≥n late por ti ‚ù§Ô∏è", "Eres mi sue√±o hecho realidad üåô",
    "Contigo todo es mejor üíû", "Eres mi paz, mi alegr√≠a y mi hogar üè†",
    "Te pienso m√°s de lo que imaginas üí≠", "Tu voz es mi melod√≠a favorita üé∂",
    "Eres el poema que no quiero dejar de leer üìñ", "Mi vida cambi√≥ desde que llegaste üí´",
    "Eres mi inspiraci√≥n üå∑", "T√∫ haces que todo valga la pena üåà",
    "Nada me hace m√°s feliz que verte sonre√≠r üòç", "Siempre ser√°s mi persona favorita üíò",
    "Tus abrazos son mi refugio ü§ó", "Contigo aprend√≠ lo que es amar üíì",
    "Te amo m√°s de lo que las palabras pueden decir üí¨", "Eres y siempre ser√°s mi destino ‚ú®"
  ];

  function actualizarContador() {
    const ahora = new Date();
    const diferencia = ahora - inicio;
    const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
    const horas = Math.floor((diferencia / (1000 * 60 * 60)) % 24);
    const minutos = Math.floor((diferencia / (1000 * 60)) % 60);
    const segundos = Math.floor((diferencia / 1000) % 60);
    document.getElementById('contador').textContent =
      `Han pasado ${dias} d√≠as, ${horas} horas, ${minutos} minutos y ${segundos} segundos desde que comenz√≥ nuestro amor ‚ù§Ô∏è`;
  }
  setInterval(actualizarContador, 1000);

  // Mensajes aleatorios, evitando zona central
  function crearMensajeAleatorio() {
    const mensaje = document.createElement('div');
    mensaje.className = 'mensaje-aleatorio';
    mensaje.textContent = mensajes[Math.floor(Math.random() * mensajes.length)];

    let top, left;
    do {
      top = Math.random() * 80;
      left = Math.random() * 80;
    } while (top > 35 && top < 65 && left > 25 && left < 75); // evita el centro

    mensaje.style.top = `${top}%`;
    mensaje.style.left = `${left}%`;
    document.body.appendChild(mensaje);
    setTimeout(() => mensaje.remove(), 6000);
  }
  setInterval(crearMensajeAleatorio, 3500);

  // Efecto de Te amo
  document.body.addEventListener('click', e => {
    const teAmo = document.createElement('div');
    teAmo.className = 'te-amo';
    teAmo.textContent = 'üíñ Te amo üíñ';
    teAmo.style.top = `${e.clientY}px`;
    teAmo.style.left = `${e.clientX}px`;
    document.body.appendChild(teAmo);
    setTimeout(() => teAmo.remove(), 1000);
  });

  // Modal
  function abrirModal() {
    document.getElementById('modalMensaje').style.display = 'flex';
  }
  function cerrarModal() {
    document.getElementById('modalMensaje').style.display = 'none';
  }
</script>

